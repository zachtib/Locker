<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notesLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" tools:text="Notes: 24" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:text="Notes"/>
    <Button
            android:text="Camera Test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cameraTestButton" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/notesLabel"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>